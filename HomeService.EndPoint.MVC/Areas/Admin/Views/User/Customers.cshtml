@using HomeService.Domain.Core.HomeService.CustomerEntity.DTO

@model List<GetCustomerDTO>





<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="AddUser">
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>تصویر</th>
                                <th>نام</th>
                                <th>جنسیت</th>
                                <th>موجودی</th>
                               
                                <th>ایمیل</th>
                                <th>تاریخ ثبت نام</th>
                                <th>عملیات</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Cat in @Model)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>

                                    <td>@Cat.Id</td>
                                    @if (string.IsNullOrEmpty(Cat.ImagePath))
                                    {
                                        <td><img style="border-radius : 50%" src="~/AdminTemplate/images/user/placeholder.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                        <td><img style="border-radius : 50%" src="@Cat.ImagePath" width="80" height="80" /></td>
                                    }


                                    <td>@Cat.FirstName @Cat.LastName</td>
                                    <td>@Cat.Gender</td>
                                    <td>@Cat.Balance</td>

                                    <td>@Cat.User.Email</td>
                                    <td>@Cat.TimeCreated</td>


                                    <td>
                                        <a asp-area="Admin" asp-controller="User" asp-action="CustomerUpdate" asp-route-Id="@Cat.Id" class="btn btn-info">ویرایش</a>
                                        <a onclick="return confirm('آیا از حذف این کاربر اطمینان دارید؟')" asp-area="Admin" asp-controller="User" asp-action="DeleteCustomer" asp-route-Id="@Cat.Id" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}