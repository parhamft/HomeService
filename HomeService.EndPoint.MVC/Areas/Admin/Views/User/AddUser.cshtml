@using HomeService.Domain.Core.HomeService.UserEntity.DTO
@using HomeService.Domain.Core.HomeService.UserEntity.Enums

@model CreateUserDTO
@{
    ViewData["Title"] = "دیوارچه > مدیریت کاربران > ایجاد کاربران";

}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                     مشتریان < کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" asp-area="Admin" asp-controller="User" asp-action="AddUser" id="simple-form" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="FirstName" class="form-control" type="text" placeholder="نام">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="LastName" class="form-control" type="text" placeholder="نام خانوادگی">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" type="email" placeholder="ایمیل" required />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="کلمه عبور" />
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="Role" class="form-select">
                                    <option value="@RoleEnum.Expert">متخصص</option>
                                    <option value="@RoleEnum.Customer">مشتری</option>

                                </select>
                            </div>
                        </div>


                        @* <div class="form-group"> *@
                        @*     <div class="input-group"> *@
                        @*         <select asp-for="Gender" class="form-select"> *@
                        @*             <option value="@GenderEnum.Male">متخصص</option> *@
                        @*             <option value="@GenderEnum.Female">مشتری</option> *@

                        @*         </select> *@
                        @*     </div> *@
                        @* </div> *@


                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a  class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->