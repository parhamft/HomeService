@using HomeService.Domain.Core.HomeService.CategoryEntity.DTO

@model List<GetCategoryDTO>





<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" href="#">
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>تصویر</th>
                                <th>نام</th>
                                <th>عملیات</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Cat in @Model)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    
                                    <td>@Cat.Id</td>
                                    @if (string.IsNullOrEmpty(Cat.ImagePath))
                                    {
                                        <td><img style="border-radius : 50%" src="~//AdminTemplate//images//user//placeholder.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                        <td><img style="border-radius : 50%" src="@Cat.ImagePath" width="80" height="80" /></td>
                                    }
                                    
                                    
                                    <td>@Cat.Name</td>


                                    <td>
                                        <a asp-page="" asp-route-Id="@Cat.Id" class="btn btn-info">ویرایش</a>
                                        <a onclick="return confirm('آیا از حذف این کاربر اطمینان دارید؟')" asp-page-handler="" asp-route-Id="@Cat.Id" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}