@using HomeService.Domain.Core.HomeService.ServiceEntity.DTO
@using HomeService.Domain.Core.HomeService.SubCategoryEntity.DTO
@model AddServiceDTO

@{
    ViewData["Title"] = "Add Service";
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">دسته بندی</h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="top-buttons-box mb-2"></div>
            <div class="row">
                <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Service" asp-action="Create" id="simple-form" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Name" class="form-control" type="text" placeholder="نام">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="BasePrice" class="form-control" type="number" placeholder="محدودیت قیمت">
                                <span asp-validation-for="BasePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="SubCategoryId" class="form-control">
                                    <option value="">-- Select a Category --</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group relative">
                            <input asp-for="ProfileImgFile" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div>
                            <span asp-validation-for="ProfileImgFile" class="text-danger"></span>
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-action="Index" class="btn btn-warning">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>