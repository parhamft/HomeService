@using HomeService.Domain.Core.HomeService.UserEntity.DTO
@using HomeService.Domain.Core.HomeService.UserEntity.Enums

@model CreateUserDTO

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["AlertType"] alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="gray">
    <div class="container">
        <div class="row align-items-start justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-12">

                <div class="signup-screen-wrap">
                    <div class="signup-screen-single light">
                        <div class="text-center mb-4">
                            <h4 class="m-0 ft-medium">ثبت نـام</h4>
                        </div>

                        <form class="submit-form"  asp-area="Account" asp-controller="Register" asp-action="Register">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="mb-1">نام</label>
                                        <input asp-for="FirstName" required type="text" class="form-control rounded" placeholder="نام">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="mb-1">نام</label>
                                        <input asp-for="LastName" required type="text" class="form-control rounded" placeholder="نام خانوادگی">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="mb-1">پست الکترونیک</label>
                                        <input asp-for="Email" required type="text" class="form-control rounded" placeholder="example@gmail.com">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="mb-1">رمز عبور</label>
                                <input type="password" required asp-for="Password" class="form-control rounded" placeholder="رمز عبور*">
                            </div>


                            <div class="form-group">
                                <div class="input-group">
                                    <select asp-for="Role" class="form-select">
                                        <option value="@RoleEnum.Expert">متخصص</option>
                                        <option value="@RoleEnum.Customer">مشتری</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-md full-width bg-sky text-light rounded ft-medium">ثبت نام</button>
                            </div>

                            <div class="form-group text-center mb-0">
                                <p class="extra">یا ثبت نام با</p>
                                <div class="option-log">
                                    <div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/c-1.png" class="img-fluid" alt="" />ورود با Google</a></div>
                                    <div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/facebook.png" class="img-fluid" alt="" />ورود با Facebook</a></div>
                                </div>
                            </div>

                            <div class="form-group text-center mt-4 mb-0">
                                <p class="mb-0">آیا قبلا ثبت نام کرده اید؟ <a asp-area="Account" asp-controller="Login" class="ft-medium text-success">ورود به حساب کاربری</a></p>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>